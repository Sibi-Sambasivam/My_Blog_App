<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>My Blog</h1>
        <a class="btn" href="/posts/new">Create New Post</a>
        <div class="posts">
            <% posts.forEach(post => { %>
                <div class="post">
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                    <div class="btn-group">
                        <a class="btn" href="/posts/<%= post.id %>/edit">Edit</a>
                        <form action="/posts/<%= post.id %>/delete" method="POST" style="display: inline;">
                            <button class="btn btn-delete" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
